                height="48"
            />
            
            <OutlinedButton 
                text="Limpar" 
                on_click="on_clear"
               
                width="150"
                height="48"
            />
            
            <ElevatedButton 
                text="Sair" 
                on_click="on_exit"
                bgcolor="#f44336"
               
                width="150"
                height="48"
            />
        </Row>

        <!-- Bot√µes de exemplo para m√∫ltiplas janelas -->
        <Row spacing="18" alignment="center">
