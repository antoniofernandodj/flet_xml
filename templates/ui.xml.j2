                        border_radius="8">
                        {% for pais in paises %}
                            <dropdown.Option
                                key="{{ pais.sigla }}"
                                text="{{ pais.nome }}"
                            />
                        {% endfor %}
                    </Dropdown>
                    
                    <Container expand="True" padding="10">
                        <Checkbox 
                            id="termos" 
                            label="Aceito os termos de uso"
                        />
                    </Container>
                </Row>
            </Column>
        </Container>

        <!-- Bot√µes de a√ß√£o -->
        <Row spacing="18" alignment="center">
            <ElevatedButton 
                text="Cadastrar" 
