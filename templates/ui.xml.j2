                    size="15"
                    opacity="0.9"
                />
            </Column>
        </Container>

        <!-- Card do formul√°rio -->
        <Container 
            bgcolor="white"
            border_radius="16"
            padding="35"
            width="480">
            <Column spacing="22" alignment="start">
                <TextField 
                    id="nome" 
                    label="Nome completo" 
                    width="410" 
                    autofocus="true"
                    border_color="#e0e0e0"
                    focused_border_color="#667eea"
                    border_width="1"
                    border_radius="8"
                />
                
                <TextField 
                    id="email" 
                    label="E-mail" 
                    width="410"
                    border_color="#e0e0e0"
                    focused_border_color="#667eea"
                    border_width="1"
                    border_radius="8"
                />
                
                <TextField 
                    id="senha" 
                    label="Senha" 
                    password="true" 
                    can_reveal_password="true" 
                    width="410"
                    border_color="#e0e0e0"
                    focused_border_color="#667eea"
                    border_width="1"
                    border_radius="8"
                />
                
                <Row spacing="20" alignment="start" wrap="false">
                    <Dropdown 
                        id="pais" 
