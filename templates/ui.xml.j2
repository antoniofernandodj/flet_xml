{%
    set paises = [
        {"nome": "Brasil", "sigla": "br"},
        {"nome": "Estados Unidos", "sigla": "us"},
        {"nome": "Portugal", "sigla": "pt"},
        {"nome": "Argentina", "sigla": "ar"},
        {"nome": "Jap√£o", "sigla": "jp"}
    ]
%}

<Container 
    bgcolor="#667eea"
    expand="True"
    padding="40">
    <Column spacing="30" alignment="center" expand="True">
        <!-- Cabe√ßalho com sauda√ß√£o -->
        <Container>
            <Column spacing="8" alignment="center" horizontal_alignment="center">
                <Text
                    value="üëã Ol√°, {{ nome }}!"
